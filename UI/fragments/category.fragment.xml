<core:FragmentDefinition
	xmlns:layout="sap.ui.layout"
	xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
    <layout:Grid
		defaultSpan="L12 M12 S12"
		width="auto">
        <layout:content>
            <form:SimpleForm
				minWidth="1024"
				maxContainerCols="2"
				editable="false"
				layout="ResponsiveGridLayout"
				title="{i18n>categoryInfo}"
				labelSpanL="3"
				labelSpanM="3"
				emptySpanL="4"
				emptySpanM="4"
				columnsL="1"
				columnsM="1">
                <form:content>
                    <Label text="{i18n>categoryInfoID}" />
                    <Text text="{ID}" />
                    <Label text="{i18n>categoryInfoName}" />
                    <Text text="{Name}" />
                </form:content>
            </form:SimpleForm>
        </layout:content>
    </layout:Grid>
</core:FragmentDefinition>